# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Local Development Database
DATABASE_URL=postgresql://username:password@localhost:5432/jeevanrakth?schema=public

# AWS RDS PostgreSQL (Managed Database)
# Uncomment and use when deploying to AWS RDS
# DATABASE_URL=postgresql://adminuser:YourPassword@jeevan-rakth-db.c9akcl32r1ad.us-east-1.rds.amazonaws.com:5432/jeevanrakth?schema=public&sslmode=require

# Azure Database for PostgreSQL (Managed Database)
# Uncomment and use when deploying to Azure
# DATABASE_URL=postgresql://adminuser:YourPassword@jeevan-rakth-db.postgres.database.azure.com:5432/jeevanrakth?schema=public&sslmode=require

# Connection Pool Settings (Optional - Recommended for Production)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=10000

# SSL/TLS Configuration (Required for managed databases)
DATABASE_SSL_ENABLED=true

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# IMPORTANT: Use strong, random secrets in production!
# Generate secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
# Enable refresh token rotation for enhanced security (optional)
ENABLE_REFRESH_TOKEN_ROTATION=false

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
FILE_STORAGE_PROVIDER=aws
FILE_UPLOAD_URL_TTL_SECONDS=120
FILE_UPLOAD_MAX_BYTES=5242880

# AWS S3 Configuration (required when FILE_STORAGE_PROVIDER=aws)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your-bucket-name

# Azure Blob Storage Configuration (required when FILE_STORAGE_PROVIDER=azure)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=your-container

# ==========================================
# REDIS CACHE CONFIGURATION (Optional)
# ==========================================
# Local Redis
REDIS_URL=redis://localhost:6379

# AWS ElastiCache Redis (Managed)
# REDIS_URL=redis://jeevan-rakth-cache.xxxxx.ng.0001.use1.cache.amazonaws.com:6379

# Azure Cache for Redis (Managed)
# REDIS_URL=rediss://:YourPassword@jeevan-rakth-cache.redis.cache.windows.net:6380

# ==========================================
# CLIENT-SIDE VARIABLES
# ==========================================
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
